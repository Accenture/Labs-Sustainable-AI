@inproceedings{10.1145/2660129.2660142,
author = {Hasegawa, Toru and Nakai, Yuto and Ohsugi, Kaito and Takemasa, Junji and Koizumi, Yuki and Psaras, Ioannis},
title = {Empirically Modeling How a Multicore Software ICN Router and an ICN Network Consume Power},
